package com.tracy.test;

import java.util.Scanner;

public class HelloWorld {
	public static void main(String[] str) {
		int x,m,n;
		int a=0;
		int b=0;
		int c=0;
		int d=0;
		System.out.println("请输入BJT时间：");
	    Scanner in=new Scanner(System.in);
	    x=in.nextInt();
		if(x<0)
			System.out.println("输入错误，请重新输入：");
		else if(x>2359)
			System.out.println("输入错误，请重新输入：");
		else
		{
			m=x/100;
			n=x%100;
			if(m<10)
				{	a=0;
					b=m;
				}
			else if(m==0)
			{
				a=0;
				b=0;
			}
			else
			{
				a=m/10;
				b=m%10;
			}
			if(n<10)
				{	c=0;
					d=n;
				}
			else
			{
				c=n/10;
				d=n%10;
			}
		System.out.println("UTC时间为："+a+b+"点"+c+d+"分");
		}
	    
		
	}
}
